<?xml version="1.0" encoding="utf-8" ?>
<!--
All limitations resolve to boolean (true/false) values.

Supported check types:
* Parameter - Checks if the address has the value provided here or by whatever uses this limitation.
* Limitation - Check if another limitation returns target (boolean). Use this to provide aliases or composite limitations easily without duplicate logic.
* Comparison - Compares if multiple addresses are equal to eachother or not. equal specifies whether they should be or not.

 TODO: Base limitations should only use the Simple check type. Enforce this.
 TODO: The value field in base limitations is actually the fail case but in non-base limitations it is the pass case. Clean that up.
-->

<limitations xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <base>
    <!-- Missing base limitations:
          * InTheBeginningDone
          * StillToFadeOut - When would this trigger?
          * ShuttingDownCheck - Disabled in the old version, so not needed(?)
    -->
    <limitation>
      <onFail>abort</onFail>
      <checks>
        <check xsi:type="parameter">
          <address>NotLoadingGame</address>
          <value>false</value>
        </check>
      </checks>
    </limitation>
    <limitation>
      <onFail>suspend</onFail>
      <checks>
        <check xsi:type="parameter">
          <address>InMenu</address>
          <value>true</value>
        </check>
      </checks>
    </limitation>
    <limitation>
      <onFail>suspend</onFail>
      <checks>
        <check xsi:type="parameter">
          <address>PlayerControllable</address>
          <value>false</value>
        </check>
      </checks>
    </limitation>
  </base>
  <limitation>
    <name>OnMission</name>
    <checks>
      <check xsi:type="parameter">
        <address>OnMission</address>
        <value>true</value>
      </check>
    </checks>
  </limitation>
  <limitation>
    <name>OnMissionNamed</name>
    <checks>
      <check xsi:type="limitation">
        <limitation>OnMission</limitation>
        <target>true</target>
      </check>
      <check xsi:type="parameter">
        <address>MissionName</address>
      </check>
    </checks>
  </limitation>
  <limitation>
    <name>OnFoot</name>
    <checks>
      <check xsi:type="limitation">
        <limitation>InVehicle</limitation>
        <target>false</target>
      </check>
      <check xsi:type="limitation">
        <limitation>PlayerStatus</limitation>
        <target>false</target>
        <parameters>
          <parameter>
            <name>PlayerStatus</name>
            <value>50</value>
          </parameter>
        </parameters>
      </check>
    </checks>
  </limitation>
  <limitation>
    <!-- TODO(Ligh): This limitation is too vague-->
    <name>PlayerStatusOnFootDefault</name>
    <checks>
      <check xsi:type="limitation">
        <limitation>PlayerStatus</limitation>
        <target>true</target>
        <parameters>
          <parameter>
            <name>PlayerStatus</name>
            <value>1</value>
          </parameter>
        </parameters>
      </check>
    </checks>
  </limitation>
  <limitation>
    <name>PlayerStatus</name>
    <checks>
      <check xsi:type="parameter">
        <address>PlayerStatus</address>
      </check>
    </checks>
  </limitation>
  <limitation>
    <name>InVehicle</name>
    <checks>
      <check xsi:type="comparison">
        <addresses>
          <address>PlayerPointer</address>
          <address>VehiclePointer</address>
        </addresses>
        <equal>false</equal>
      </check>
    </checks>
  </limitation>
  <limitation>
    <name>InVehicleType</name>
    <checks>
      <check xsi:type="limitation">
        <limitation>InVehicle</limitation>
        <target>true</target>
      </check>
      <check xsi:type="parameter">
        <address>CurrentVehicleType</address>
      </check>
    </checks>
  </limitation>
  <limitation>
    <name>InCar</name>
    <checks>
      <check xsi:type="limitation">
        <limitation>InVehicleType</limitation>
        <target>true</target>
        <parameters>
          <parameter>
            <name>CurrentVehicleType</name>
            <value>0</value>
          </parameter>
        </parameters>
      </check>
    </checks>
  </limitation>
</limitations>